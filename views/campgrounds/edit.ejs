<%- include('partials/header.ejs') %>
    <h1>Edit campground</h1>
    <main class="container">
        <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
            <section>
                <label for="title">Title: </label>
                <input type="text" name="title" id="title" placeholder="campground title" value="<%= campground.title %>">
                <label for="location">Location: </label>
                <input type="text" name="location" id="location" placeholder="campground location" value="<%= campground.location %>">
            </section>
            <button type="submit">Submit</button>
        </form>
        <a href="/campgrounds">Back to home page</a>
    </main>
<%- include('partials/footer.ejs') %>