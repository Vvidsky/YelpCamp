<%- include('partials/header.ejs') %>
    <main class="container mt-3">
        <h1>
            <%= campground.title %>
        </h1>
        <h3>
            <%= campground.location %>
        </h3>
        <img src="<%= campground.image %>" alt="campground">
        <p> <%= campground.description %> </p> 
        <a href="/campgrounds">Back to home page</a>
