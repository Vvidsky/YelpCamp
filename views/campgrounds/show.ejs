<%- include('partials/header.ejs') %>
    <main class="container mt-3">
        <div class="row">
            <div class="col-6 offset-3">
                <div class="card">
                    <img src="<%= campground.image %>" alt="campground" max-height="300px">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.title %></h4>
                        <h5 class="card-text"><%= campground.location %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning float-start">Edit</a>
                        <form method="POST" action="/campgrounds/<%= campground._id %>?_method=DELETE">
                            <button type="submit" class="btn btn-danger float-end">Delete</button>
                        </form>
                    </div>
                    <div class="card-footer">
                        $<%= campground.price %> / Night
                      </div>
                </div>
            </div>
        </div>
        <a href="/campgrounds" class="btn btn-primary">Back to home page</a>
    </main>

    <%- include('partials/footer.ejs') %>